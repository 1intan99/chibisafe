{
	"compilerOptions": {
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"module": "commonjs",
		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"rootDir": "./",
		"outDir": "./dist",
		"sourceRoot": "./",
		"types": [
			"@types/node",
			"@nuxt/types"
		  ]
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "../api/main.ts", "../api/structures/routes.ts", "../api/structures/interfaces.ts"]
}
